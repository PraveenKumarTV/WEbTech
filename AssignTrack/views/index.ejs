<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Assignment Tracker</title>
  <link rel="manifest" href="/manifest.json" />
  <meta name="theme-color" content="#0d6efd" />
  <link rel="apple-touch-icon" href="/icons/icon-192.png" />

  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
</head>
<body>
  <div class="container mt-4">
    <h1 class="mb-4 text-center">📘 Assignment Tracker</h1>

    <div class="mb-3 text-end">
      <a href="/add" class="btn btn-primary">+ Add Assignment</a>
    </div>

    <% if (assignments.length === 0) { %>
      <p class="text-muted">No assignments added yet.</p>
    <% } else { %>
      <div class="list-group">
        <% assignments.forEach((a, i) => { %>
          <div class="list-group-item">
            <h5><%= a.title %></h5>
            <p><%= a.description %></p>
            <small class="text-muted">Due: <%= a.dueDate %></small>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
<script>
  let deferredPrompt;
  window.addEventListener('beforeinstallprompt', (e) => {
    e.preventDefault(); // Stop automatic prompt
    deferredPrompt = e;

    // Show custom install button
    const installBtn = document.createElement('button');
    installBtn.innerText = "📲 Install App";
    installBtn.className = "btn btn-success d-block mx-auto my-4";
    document.body.appendChild(installBtn);

    installBtn.addEventListener('click', () => {
      installBtn.remove();
      deferredPrompt.prompt();

      deferredPrompt.userChoice.then(choice => {
        if (choice.outcome === 'accepted') {
          console.log('✅ User accepted the install prompt');
        } else {
          console.log('❌ User dismissed the install prompt');
        }
        deferredPrompt = null;
      });
    });
  });
</script>

</html>
